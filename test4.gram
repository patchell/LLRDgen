TERMINALS
	"IDENT" = 256,
	"VARIDENT",
	"+",
	"-",
	"*",
	"/",
	".",
	"(",
	")",
	"=",
	";",
	"^",
	"@",
	"[",
	"]",
	",",
	"FOR",
	"TO",
	"STEP",
	"DO",
	"OD",
	"NUMBER",
	"INT"
END_TERMINALS

GRAMMAR
grammar -> Decls statements
		;

statements -> statement statements_1
            ;

statements_1	-> ';' statement statements_1
				-> .
				;

statement	-> MemContents Assignment
			-> 'FOR' ForStmt
          ;

Assignment	-> '=' expr;

expr	-> term expr_1;
expr_1	-> '+' term expr_1
		-> '-' term expr_1
		-> .
		;

term	-> factor term_1;
term_1	-> '*' factor term_1
		-> '/' factor term_1
		-> .
		;

factor	-> MemContents
		-> BaseConstant
       -> '(' expr ')'
       ;

ForStmt		-> expr ToPart;
ToPart		-> 'TO' expr StepPart DoPart;
StepPart	-> 'STEP' expr 
			-> .
			;
DoPart		-> 'DO' statements 'OD';

MemContents	-> 'IDENT' MemContType;
MemContType	-> '(' expr ')'
			-> '^'
			-> .
			;

//Constant	-> BaseConstant Constat_1;
//Constat_1	-> '+' BaseConstant Constat_1
//			-> .
//			;
BaseConstant	-> 'NUMBER'
				-> '@' MemContents
				;

Decls		-> Decl Decls_1;
Decls_1		-> ';' Decl Decls_1
			->	.
			;

Decl		-> 'INT' VarList
			-> .
			;

VarList		-> Var VarList_1;
VarList_1	-> ',' Var VarList_1
			-> .
			;

Var			-> Var_1 Var_2;
Var_2		-> 'VARIDENT' Var_3;
Var_3		-> '[' 'NUMBER' ']'
			-> .
			;

Var_1		-> '*' Var_1
			-> .
			;

END_GRAMMAR
